{% extends "layout.twig" %}

{% block body %}
<div class="flex items-center justify-center h-full bg-gray-100">
    <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
        <h1 class="text-2xl font-bold mb-6 text-center">Mot de passe oublié</h1>

        {% if error %}
            <p class="mb-4 text-red-600 text-center">{{ error }}</p>
        {% endif %}

        {% if message %}
            <p class="mb-4 text-green-600 text-center">{{ message }}</p>
        {% endif %}

        <form method="POST" action="/auth/forgot-password" class="space-y-4">
            <div>
                <label for="email" class="block mb-1 font-semibold text-gray-700">Adresse e-mail :</label>
                <input type="email" name="email" id="email" required
                       class="w-full border border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500" />
            </div>

            <button type="submit"
                    class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition">
                Envoyer le lien de réinitialisation
            </button>
        </form>
    </div>
</div>
{% endblock %}
