{% extends '../layout.twig' %}

{% block body %}
    <div class="flex items-center justify-center min-h-screen bg-gray-100">
        <div class="max-w-md w-full bg-white shadow-lg rounded-lg p-6">
            <div class="flex justify-center mb-4">
                <img src="/images/logo.jpg" alt="Logo" class="h-16 w-auto">
            </div>
            <h1 class="text-center text-2xl font-bold mb-4">{{ title }}</h1>
            <form action="/auth/login" method="POST">
                <div class="mb-4">
                    {% if error %}
                        <div class="bg-red-100 text-red-700 border border-red-400 p-2 rounded mb-4">
                            {{ error }}
                        </div>
                    {% endif %}
                    <label for="email" class="block text-gray-700">Email:</label>
                    <input type="email" id="email" name="email" required class="border border-gray-300 rounded p-2 w-full focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <div class="mb-4">
                    <label for="password" class="block text-gray-700">Mot de passe:</label>
                    <input type="password" id="password" name="password" required class="border border-gray-300 rounded p-2 w-full focus:outline-none focus:ring-2 focus:ring-blue-500">
                </div>
                <button type="submit" class="bg-blue-500 text-white rounded p-2 w-full hover:bg-blue-600">Se connecter</button>
            </form>

            <div class="mt-2 text-center">
                <a href="/auth/forgot-password" class="text-sm text-blue-500 hover:underline">Mot de passe oublié ?</a>
            </div>

            <div class="mt-4 text-center">
                <p>Pas encore de compte ?</p>
                <a href="/auth/register" class="text-blue-500 hover:underline">Créer un compte</a>
            </div>
        </div>
    </div>
{% endblock %}
