{% extends 'layout.twig' %}

{% block body %}
    <div class="container mx-auto">
        <h1 class="text-center text-2xl font-bold">{{ title }}</h1>
        <form action="/auth/login" method="POST" class="mt-4">
            <div class="mb-4">
                <label for="email" class="block">Email:</label>
                <input type="email" id="email" name="email" required class="border border-gray-300 rounded p-2 w-full">
            </div>
            <div class="mb-4">
                <label for="password" class="block">Mot de passe:</label>
                <input type="password" id="password" name="password" required class="border border-gray-300 rounded p-2 w-full">
            </div>
            <button type="submit" class="bg-blue-500 text-white rounded p-2">Se connecter</button>
        </form>

        <!-- Bouton pour créer un compte -->
        <div class="mt-4 text-center">
            <p>Pas encore de compte ?</p>
            <a href="/auth/register" class="bg-blue-500 text-white rounded p-2">Créer un compte</a>
        </div>
    </div>
{% endblock %}
